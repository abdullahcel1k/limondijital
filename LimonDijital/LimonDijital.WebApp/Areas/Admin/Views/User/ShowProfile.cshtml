@model LimonDijital.Entities.LimonUser

@{
    ViewBag.Title = "Profili Göster";
}

<!-- Page Heading -->
<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Profil
		</h1>
		<ol class="breadcrumb">
			<li>
				<i class="fa fa-user-circle"></i>  <a href="/Admin/User">Kullanıcılar</a>
			</li>
			<li class="active">
				<i class="fa fa-search"></i> Göster
			</li>
		</ol>
	</div>
</div>
<!-- /.row -->

<div class="col-sm-10">
	<div class="row">
		<div class="col-sm-10">
			<h2>@ViewBag.Title</h2>
			<hr />
		</div>
	</div>
	<div class="row">
		<div class="col-sm-2">
			<img src="~/images/@Model.ProfileImageFilename" class="img-circle" width="128" height="128" />
		</div>
		<div class="col-sm-10">
			<h3>@(Model.Name + " " + Model.Surname)</h3>
			<br />
			<h5><b>@Html.DisplayNameFor(model => model.Username):</b> @Model.Username</h5>
			<h5><b>@Html.DisplayNameFor(model => model.Email):</b> @Model.Email</h5>
			<br />
		</div>
	</div>
</div>