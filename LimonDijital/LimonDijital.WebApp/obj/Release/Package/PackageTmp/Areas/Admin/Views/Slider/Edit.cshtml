@model LimonDijital.Entities.LimonSlider

@{
    ViewBag.Title = "Edit";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />

<!-- Page Heading -->
<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Slider Düzenle
		</h1>
		<ol class="breadcrumb">
			<li>
				<i class="fa fa-slideshare"></i>  <a href="/Admin/Slider">Sliderlar</a>
			</li>
			<li class="active">
				<i class="fa fa-edit"></i> Slider Düzenle
			</li>
		</ol>
	</div>
</div>
<!-- /.row -->

<div class="row">
	<div class="col-sm-6 col-sm-offset-1">
		@using (Html.BeginForm("Edit", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			@Html.AntiForgeryToken()

			<div class="form-horizontal">
				@Html.ValidationSummary(false, null, htmlAttributes: new { @class = "col-md-offset-3 col-md-9" })

				<div class="form-group">
					<div class="col-sm-9 col-sm-offset-3">
						<img src="@Url.Content("~/images/"+Model.SliderImageFilename)" height="150" width="150" />
						@Html.HiddenFor(model => Model.SliderImageFilename)
					</div>
					<label class="control-label col-sm-3">Resim</label>
					<div class="col-sm-9">
						<input type="file" name="SliderImage" id="SliderImage" class="form-control" /><br />
						<span class="glyphicon glyphicon-info-sign">&nbsp;</span>
						<span><i>Lütfen jpg, jpeg yada png formatı kullanın.</i></span>
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-sm-3" })
					<div class="col-sm-9">
						@Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", maxlength = "40" } })
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.QueueNumber, htmlAttributes: new { @class = "control-label col-sm-3" })
					<div class="col-sm-9">
						@Html.EditorFor(model => model.QueueNumber, new { htmlAttributes = new { @class = "form-control", maxlength ="1" } })
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-3 col-sm-9">
						@Bootstrap.Button("success", "", "submit", "floppy-o", " Kaydet")
						@Bootstrap.LinkButton("/Admin/Slider", "default", "", "Back to list", "arrow-left", " Listeye Geri Dön")
					</div>
				</div>
			</div>
		}
	</div>
</div>