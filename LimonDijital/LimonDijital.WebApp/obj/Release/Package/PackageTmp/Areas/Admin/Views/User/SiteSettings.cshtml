@model LimonDijital.Entities.LimonSiteInfo

@{
    ViewBag.Title = "Site Ayarları";
}
<link href="~/Content/validation-summary.css" rel="stylesheet" />

<!-- Page Heading -->
<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Site Ayarları
		</h1>
		<ol class="breadcrumb">
			<li>
				<i class="fa fa-home"></i>  <a href="/Admin">Anasayfa</a>
			</li>
			<li class="active">
				<i class="fa fa-cogs"></i> Site Ayarları
			</li>
		</ol>
	</div>
</div>
<!-- /.row -->

<div class="row">
	<div class="col-sm-8">
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(false, null, htmlAttributes: new { @class = "col-sm-offset-3 col-sm-9" })
            @Html.HiddenFor(model => Model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.SiteName, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.SiteName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SiteKeywords, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.SiteKeywords, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SiteTitle, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.SiteTitle, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LinkedinProfile, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.LinkedinProfile, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FacebookProfile, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.FacebookProfile, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TwitterProfile, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.TwitterProfile, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", maxlength = "150" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Phone1, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Phone1, new
            {
                htmlAttributes = new
                {
                    @class = "form-control",
                    type = "tel",
                    maxlength = "15"
                }
            })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Phone2, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Phone2, new
            {
                htmlAttributes = new
                {
                    @class = "form-control",
                    type = "tel",
                    maxlength = "15"
                }
            })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mail1, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Mail1, new
            {
                htmlAttributes = new
                {
                    @class = "form-control",
                    type = "email",
                    maxlength = "150"
                }
            })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mail2, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.Mail2, new
            {
                htmlAttributes = new
                {
                    @class = "form-control",
                    type = "email",
                    maxlength = "150"
                }
            })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MapSrc, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.MapSrc, new { htmlAttributes = new { @class = "form-control", maxlength = "400" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HomeServiceText, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(model => model.HomeServiceText, new { htmlAttributes = new { @class = "form-control", maxlength = "500", rows = "3", cols = "50" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HomePortofiloText, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(model => model.HomePortofiloText, new { htmlAttributes = new { @class = "form-control", maxlength = "500", rows = "3", cols = "50" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HomeQuestionText, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(model => model.HomeQuestionText, new { htmlAttributes = new { @class = "form-control", maxlength = "500", rows = "3", cols = "50" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HomeReferenceText, htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(model => model.HomeReferenceText, new { htmlAttributes = new { @class = "form-control", maxlength = "500", rows = "3", cols = "50" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    @Bootstrap.Button("success", "", "submit", "floppy-o", " Kaydet")
                    @Bootstrap.LinkButton("/Admin", "default", "", "Back to list", "arrow-left", " Anasayfaya Geri Dön")
                </div>
            </div>
        </div>
		}
	</div>
</div>
